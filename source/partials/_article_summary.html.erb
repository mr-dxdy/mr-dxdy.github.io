<article class="article blog__article">
  <div class="meta article__meta">
    <time class="meta__time"><%= I18n.l article.date, format: "%A, %-d %B %Y" %></time>
  </div>
  <h1 class="article__title">
    <%= link_to article.title.capitalize, article, class: 'article__title-link' %>
  </h1>
  <div class="article__text"><%= article.summary %></div>
  <div class="readmore article__readmore">
    <%= link_to 'Подробнее &#8594;', article, class: 'readmore__link' %>
  </div>
</article>
